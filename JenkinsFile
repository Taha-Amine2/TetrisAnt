pipeline {
    agent any

    options {
        skipStagesAfterUnstable()
    }

    environment {
        DOCKER_IMAGE = 'tetrisant:latest'
        JAR_FILE = 'Tetris.jar'
        SONARQUBE_TOKEN = credentials('tetristoken')
    }

    stages {
        stage('Checkout code') {
            steps {
                checkout([
                    $class: 'GitSCM', 
                    branches: [[name: '*/main']], 
                    doGenerateSubmoduleConfigurations: false, 
                    extensions: [], 
                    submoduleCfg: [], 
                    userRemoteConfigs: [[
                        credentialsId: 'jenkinscreds', 
                        url: 'https://github.com/Taha-Amine2/TetrisAnt.git'
                    ]]
                ])
            }
        }

        stage('Build Docker image') {
            steps {
                script {
                    // Build the Docker image
                    sh 'docker build -t ${DOCKER_IMAGE} .'
                }
            }
        }

        stage('Run Docker Image and extract Tetris.jar') {
            steps {
                script {
                    sh 'docker stop temp-container || true'
                    sh 'docker rm temp-container || true'
                    sh 'docker run --name temp-container ${DOCKER_IMAGE}'
                    sh 'docker cp temp-container:/app/bin/${JAR_FILE} Tetris.jar'
                    sh 'docker stop temp-container || true'
                    sh 'docker rm temp-container'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'tetrisscanner'
                    withSonarQubeEnv('tetris') { 
                        sh """
                        ${scannerHome}/bin/sonar-scanner \
                        -Dsonar.projectKey=tetristoken \
                        -Dsonar.projectName=tetris \
                        -Dsonar.sources=. \
                        -Dsonar.host.url=http://localhost:9000 \
                        -Dsonar.login=${SONARQUBE_TOKEN}
                        """
                    }
                }
            }
        }

        stage('Archive Tetris.jar') {
            steps {
                // Archive the JAR file as an artifact
                archiveArtifacts artifacts: "${JAR_FILE}", allowEmptyArchive: false
            }
        }
    }

    post {
        cleanup {
            // Clean up Docker images and containers
            sh 'docker rmi ${DOCKER_IMAGE} || true'
        }
    }
}
